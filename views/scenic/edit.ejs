<% include ../partials/header %>
<div class="container" style="text-align: center">
    <h1>Update Information Posted.</h1>
    <div style="width:30%; margin: 30px auto">
        <form action="/scenic/<%= foundedScenicSpot._id %>?_method=put" method="post">
            <div class="form-group">
                <input type="text" class="form-control" name="scenicspot[name]"  value="<%= foundedScenicSpot.name %>" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="scenicspot[image]"  value="<%= foundedScenicSpot.url %>" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="scenicspot[desc]"  value="<%= foundedScenicSpot.desc %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="scenicspot[location]" id="location" value="<%= foundedScenicSpot.location %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="rate" min="1" max="5" value="<%= foundedScenicSpot.rate %>" required>
            </div>
            <div class="form-group">
                <button class="form-control btn btn-primary">Submit</button>
            </div>
        </form>
        <a href="/scenic">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>